default_platform(:ios)

skip_docs

platform :ios do
  desc "인증서와 프로비저닝 프로파일 동기화"
  lane :sync_certificates do
    keychain_name = "build.keychain-db"
    keychain_password = ENV["KEYCHAIN_PASSWORD"]

    create_keychain(
      name: keychain_name,
      password: keychain_password,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false,
      add_to_search_list: true
    )

    # App Store Connect API 키 설정
    if ENV["APP_STORE_CONNECT_API_KEY_KEY"]
      app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
        key_content: Base64.decode64(ENV["APP_STORE_CONNECT_API_KEY_KEY"]),
        duration: 1200,
        in_house: false
      )
    end

    # 인증서와 프로비저닝 프로파일 동기화
    match(
      type: "appstore",
      app_identifier: "com.tomyongji.ios",
      keychain_name: keychain_name,
      keychain_password: keychain_password,
      force: true,
      readonly: false,
      generate_apple_certs: true
    )
  end

  desc "TestFlight 배포 (develop 브랜치용)"
  lane :beta do
    # 빌드 번호 가져오기
    build_number = get_build_number(
      xcodeproj: "ToMyongJi.xcodeproj"
    ).to_i

    # 빌드 번호 증가
    increment_build_number(
      build_number: (build_number + 1).to_s,
      xcodeproj: "ToMyongJi.xcodeproj"
    )

    # 인증서 동기화
    sync_certificates

    # 앱 빌드 (Project.swift에 서명 정보가 있으므로 단순화)
    build_ios_app(
      scheme: "ToMyongJi-iOS",
      workspace: "ToMyongJi.xcworkspace"
    )

    # TestFlight에 업로드
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "App Store 배포 (main 브랜치용)"
  lane :release do
    # App Store 배포 시에는 버전 및 빌드 번호를 자동으로 올리지 않음
    # 버전 관리는 develop -> main 브랜치로 머지하기 전에 수동으로 관리

    # 인증서 동기화
    sync_certificates

    # 앱 빌드 (Project.swift에 서명 정보가 있으므로 단순화)
    build_ios_app(
      scheme: "ToMyongJi-iOS",
      workspace: "ToMyongJi.xcworkspace"
    )

    # App Store에 업로드하고 심사 제출
    upload_to_app_store(
      # metadata 폴더의 release_notes.txt 내용을 자동으로 제출
      submit_for_review: true,
      
      # 심사 제출 시 자동으로 앱을 출시하지 않도록 설정
      automatic_release: false
    )
  end
end