default_platform(:ios)

skip_docs

platform :ios do
  desc "인증서와 프로비저닝 프로파일 동기화"
  lane :sync_certificates do
    keychain_name = "build.keychain-db"
    keychain_password = ENV["KEYCHAIN_PASSWORD"]

    create_keychain(
      name: keychain_name,
      password: keychain_password,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false,
      add_to_search_list: true
    )

    # App Store Connect API 키 설정
    app_store_connect_api_key(
      key_id: "8L63PR5VMY",
      issuer_id: "1938b5bc-4d44-4546-8960-204d5b167b20",
      key_filepath: "fastlane/AuthKey_8L63PR5VMY.p8",
      duration: 1200,
      in_house: false
    )

    # App Store 배포용 인증서
    match(
      type: "appstore",
      app_identifier: "com.tomyongji.ios",
      keychain_name: keychain_name,
      keychain_password: keychain_password,
      force: true
    )

    # 개발용 인증서
    match(
      type: "development",
      app_identifier: "com.tomyongji.ios",
      keychain_name: keychain_name,
      keychain_password: keychain_password,
      force: true
    )
  end

  desc "TestFlight 배포"
  lane :beta do
    # 빌드 번호 가져오기
    build_number = get_build_number(
      xcodeproj: "ToMyongJi.xcodeproj"
    ).to_i

    # 큰 업데이트 시 원하는 버전으로 직접 지정(필요할 때 사용)
    # increment_version_number(
    #   version_number: "2.0.0",
    #   xcodeproj: "ToMyongJi.xcodeproj"
    # )

    # # 버전 번호 증가(필요할 때 사용)
    # current_version = get_version_number(
    #   xcodeproj: "ToMyongJi.xcodeproj",
    #   target: "ToMyongJi-iOS"
    # )
    # version_components = current_version.split(".").map(&:to_i)
    # version_components[-1] += 1
    # new_version = version_components.join(".")
    # increment_version_number(
    #   version_number: new_version,
    #   xcodeproj: "ToMyongJi.xcodeproj"
    # )

    # 빌드 번호 증가
    increment_build_number(
      build_number: (build_number + 1).to_s,
      xcodeproj: "ToMyongJi.xcodeproj"
    )

    # 인증서 동기화 및 빌드/업로드
    sync_certificates
    build_ios_app(
      scheme: "ToMyongJi-iOS",
      workspace: "ToMyongJi.xcworkspace",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.tomyongji.ios" => "match AppStore com.tomyongji.ios"
        },
        signingStyle: "manual",
        signingCertificate: "Apple Distribution"
      },
      xcargs: "-skipPackageUpdates -skipPackagePluginValidation -skipMacroValidation -skip-testing EXCLUDED_SOURCE_FILE_NAMES='*Tests.*'"
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "App Store에 배포"
  lane :release do
    sync_certificates

    # 전체 버전에서 가장 큰 빌드 번호를 가져옴
    begin
      latest_build = app_store_build_number(
        live: false
      )
    rescue
      latest_build = 0
    end

    increment_build_number(
      build_number: latest_build + 1,
      xcodeproj: "ToMyongJi.xcodeproj"
    )

    build_ios_app(
      scheme: "ToMyongJi-iOS",
      workspace: "ToMyongJi.xcworkspace",
      export_method: "app-store",
      export_team_id: "FN67GXC5GH",
      export_options: {
        provisioningProfiles: {
          "com.tomyongji.ios" => "match AppStore com.tomyongji.ios"
        },
        signingStyle: "manual",
        signingCertificate: "Apple Distribution",
        teamID: "FN67GXC5GH"
      }
    )

    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      precheck_include_in_app_purchases: false,
      submission_information: {
        add_id_info_uses_idfa: false
      },
      metadata_path: "./fastlane/metadata"
    )
  end
end
