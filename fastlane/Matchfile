# 인증서 및 프로비저닝 프로파일 관리 설정
git_url("https://github.com/ToMyongJi/ToMyongJi-iOS")  # 인증서 저장 Git repo

type("appstore")                                      # 앱스토어 배포용 인증서
storage_mode("git")                                   # Git 저장 방식 사용
app_identifier(["com.tomyongji.ios"])                 # 관리할 앱 ID
git_branch("develop")                                 # develop 브랜치 사용

# 사용자 정보
username("junnkyuu22@gmail.com")

# CI 환경에서 키체인 관련 설정 추가
keychain_name("build.keychain")
keychain_password(ENV["MATCH_KEYCHAIN_PASSWORD"])